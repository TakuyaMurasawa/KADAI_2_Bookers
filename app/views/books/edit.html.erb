<h1>Editing Book</h1>

<%= form_with model: @book, class: "form", local: true do |f| %>

<% if @book.errors.any? %>
     <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
     <% @book.errors.full_messages.each do |book| %>
          <p><%= book %> can't be blank.</p>
     <% end %>
<% end %>

<div class="field">
<div class="book-title">Title</div>
<%= f.text_field :title, class: "book-title-form" %>
</div>

<div class="field">
<div class="book-body">Body</div>
<%= f.text_area :body, class: "book-body-form" %>
</div>

<div class="actions">
<%= f.submit 'Update Book', class: "book-actions" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book) %>
